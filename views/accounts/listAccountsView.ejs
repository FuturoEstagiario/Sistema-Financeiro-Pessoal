<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Contas</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  
  <div class="container">
      <h1>Lista de Contas</h1>

      <div class="top-actions">
        <a href="/accounts/create" class="btn btn-primary">
            + Nova Conta
        </a>
        <a href="/dashboard" class="btn btn-secondary">
            Voltar ao Painel
        </a>
      </div>

      <div class="table-responsive">
          <table>
            <thead>
              <tr>
                <th>Nome da Conta</th>
                <th>Tipo</th>
                <th>Saldo Inicial</th>
                <th>Ações</th>
              </tr>
            </thead>
            <tbody>
              <% if (accounts.length > 0) { %>
                <% accounts.forEach(conta => { %>
                  <tr>
                    <td><strong><%= conta.nome %></strong></td>
                    <td><%= conta.tipo %></td>
                    
                    <td style="font-weight: bold; color: #555;">
                        R$ <%= parseFloat(conta.saldo_inicial).toFixed(2).replace('.', ',') %>
                    </td>
                    
                    <td>
                      <div class="actions-cell">
                          <a href="/accounts/update/<%= conta.id_conta %>" class="btn btn-table-edit">
                            Editar
                          </a>

                          <form action="/accounts/delete/<%= conta.id_conta %>" method="post" style="display:inline;" onsubmit="return confirm('Tem certeza que deseja excluir esta conta?');">
                            <button type="submit" class="btn btn-table-delete">Excluir</button>
                          </form>
                      </div>
                    </td>
                  </tr>
                <% }) %>
              <% } else { %>
                <tr>
                    <td colspan="4" style="text-align: center; padding: 20px; color: #777;">
                        Nenhuma conta encontrada.
                    </td>
                </tr>
              <% } %>
            </tbody>
          </table>
      </div>
  </div>

</body>
</html>